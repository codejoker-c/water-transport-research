<!--                android:startColor="#969696"-->
<!--                android:centerColor="#08ED23"-->
<!--                android:endColor="#B3A0A0AD"-->
<!--                android:type="linear"/>-->
            <!--设置角的弧度-->
            <corners android:radius="15dp" />
            <!--设置边框以及颜色-->
<!--            <stroke-->
<!--                android:width="1dp"-->
<!--                android:color="#0EF379"/>-->
            <!--padding Button里面的文字与Button边界的间隔-->
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
